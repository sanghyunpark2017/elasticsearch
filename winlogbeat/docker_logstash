

docker pull logstash

docker run -dit -e TZ=Asia/Seoul --name "logstash-security" logstash
docker ps

docker exec -it logstash-security /bin/bash
date

apt update

apt-get install -y net-tools procps vim

cat << EOF >> /root/.bashrc
export PS1="\[\e[36;1m\]\u@\[\e[32;1m\]\h:\[\e[31;1m\]\w# \[\e[0m\]"
alias ll='ls -al'
EOF
exit


docker stop logstash-security
docker start logstash-security

docker exec -it logstash-security /bin/bash

cd /usr/share/logstash/conf

tail -f /var/log/logstash/??










