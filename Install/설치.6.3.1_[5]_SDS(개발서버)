


###########################################
###########################################
Logstash설정
###########################################
###########################################

cd /etc/logstash/conf.d
vi /etc/logstash/conf.d/logstash-pipeline-5555.conf
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
##########################
### INPUT SECTION
##########################

input { 
  beats { 
    port => "5555" 
  } 
} 

##########################
### FILTER SECTION
##########################

filter {

#--------------------------------------------------------------------------
  if [type] == "dev-api-waslog" {
    mutate {
      remove_field => [ "beat", "offset", "source" ]
    }
    grok {
      match => { "message" => "%{TIMESTAMP_ISO8601:apptimestamp} .*" }
    }
    date {
      match => ["apptimestamp", "yyyy:MM:DD HH:mm:ss"]
    }
  }
#--------------------------------------------------------------------------
  else if [type] == "dev-https-weblog" {
    grok {
      match => { "message" => "%{COMMONAPACHELOG}" }
    }

    date {
      match => [ "timestamp", "dd/MMM/yyyy:HH:mm:ss +0900" ]
      timezone => "UTC"
    }

    geoip {
      source => "clientip"
    }
  }
#--------------------------------------------------------------------------
  else if [type] == "dev-http-weblog" {
    grok {
      match => { "message" => "%{COMMONAPACHELOG}" }
    }

    date {
      match => [ "timestamp", "dd/MMM/yyyy:HH:mm:ss +0900" ]
      timezone => "UTC"
    }

    geoip {
      source => "clientip"
    }
  }
#--------------------------------------------------------------------------
}  #End of Filter


##########################
### OUTPUT SECTION
##########################


output {
  if [type] == "dev-api-waslog" 
  {
    elasticsearch { hosts => "http://10.10.62.103:9200"
    index => "logstash-dev-api-waslog" }
  }
#--------------------------------------------------------------------------
  else if [type] == "dev-https-weblog"
  {
    elasticsearch { hosts => "http://10.10.62.103:9200"
    index => "logstash-dev-https-weblog" }
  }
#--------------------------------------------------------------------------
  else if [type] == "dev-http-weblog"
  {
    elasticsearch { hosts => "http://10.10.62.103:9200"
    index => "logstash-dev-http-weblog" }
  }
#--------------------------------------------------------------------------



}


~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~




###########################################
###########################################
Filebeat설정 (개발서버)
###########################################
###########################################

cd /etc/filebeat
vi /etc/filebeat/filebeat.yml
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
filebeat.inputs:
#--------------------------------------------------------------------------
  - type: log
    fields_under_root: true
    fields:
      type: dev-api-waslog
    encoding: utf-8
    ignore_older: 240h  #need for update
    scan_frequency: 5s
    clean_inactive: 480h  #need for update
    clean_removed: true
    paths:
      - /logs/waslog/sds_api_T1CSDSAPIDEV01.log
    multiline.pattern: '^[[0-9]{4}-[0-9]{2}-[0-9]{2}'
    multiline.negate: true
    multiline.match: after
    multiline.timeout: 5s
#--------------------------------------------------------------------------
  - type: log
    fields_under_root: true
    fields:
      type: dev-https-weblog
    encoding: utf-8
    ignore_older: 240h  #need for update
    scan_frequency: 5s
    clean_inactive: 480h  #need for update
    clean_removed: true
    paths:
      - /logs/weblog/ssl_dev.reach.access.*.log
#--------------------------------------------------------------------------
  - type: log
    fields_under_root: true
    fields:
      type: dev-http-weblog
    encoding: utf-8
    ignore_older: 240h  #need for update
    scan_frequency: 5s
    clean_inactive: 480h  #need for update
    clean_removed: true
    paths:
      - /logs/weblog/dev.reach.access.*.log
#--------------------------------------------------------------------------


##########################
### Modules & Kibana
##########################

filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: false

setup.template.settings:
  index.number_of_shards: 3
  
setup.kibana:


##########################
### OUTPUT SECTION
##########################

output.logstash:
  hosts:
  - 10.10.62.103:5555


~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~


######################
#filebeat modules
######################

#filebeat.yml 기본 설정 안에 "filebeat.config.modules:" 설정을 빼도 되지만 이 경우 "filebeat modules" 명령어 오류 발생함
#쓰지 않을 것이면 빼도 되나 나중에 사용할 수 있으니 넣어둔다.

#filebeat에는 여러 모듈이 있음
cd /etc/filebeat/modules.d
filebeat modules list

#이 중에서 apache2 모듈을 활성화 시킴
filebeat modules enable apache2
filebeat modules list

#비활성화
filebeat modules disable apache2




######################
#기타. 초기화 재로딩
######################

1. filebeat 중지
service filebeat stop
cat  /var/lib/filebeat/registry


2. logstash 중지
systemctl stop logstash

3. 오브젝트 삭제
curl -XDELETE http://localhost:9200/filebeat-*
curl -XDELETE http://localhost:9200/logstash-*
curl -XDELETE http://localhost:9200/.mon*

4.kibana index 삭제

5.logstash 실행
systemctl start logstash
systemctl status logstash
tail -f /var/log/logstash/logstash-plain.log


6.filebeat 로그 전송 초기화 및 실행
echo "[]" > /var/lib/filebeat/registry
cat  /var/lib/filebeat/registry



service filebeat start
service filebeat status
tail -f /var/log/filebeat/filebeat

